---
import type { InfoTop } from "../../variables/info";
let item: InfoTop = Astro.props.item;
---

<div class="flex-col gap-2 p-6 items-center justify-center bg-gray-100 rounded">
  <img
    src={item.image}
    alt=""
    class="mx-auto rounded mb-9"
    width="500px"
    height="500px"
  />

  <h2 class="text-3xl text-gray-600 font-bold mb-3">{item.id}- {item.name}</h2>

  <p
    lang="es-ES"
    class="flex justify-center items-center text-center w-[90%] text-3xl"
  >
    {item.text}
  </p>
</div>
